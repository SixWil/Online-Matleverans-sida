      <!-- logo -->

      <!-- meny -->
      <div class="meny">
        <a href="/start-sida">
          <button class="button-1">Hem</button>
        </a>
        <a href="/om-oss">
          <button class="button-1">Om oss</button>
        </a>
        <% if (username) { %>
        <a href="/anvandare">
          <button class="button-1"><%= username %></button>
        </a>
