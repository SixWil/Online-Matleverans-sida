<body style="background-color: rgb(66, 66, 66); margin: 0px; overflow: hidden;">

    <!-- Om man vill ta bort scroll menyn kan man använda: -->
    <!-- overflow: hidden; -->

    <!-- Toppen av sidan, menyn, plus loggan -->
    <div class="top">
        <img class="logo" src="../../../images/Goondora.png" alt="logo goes here" style="border: solid grey 0.1vw; margin-left: 0.1vw;">

        <!-- logo placeholder -->
        <!-- <div class="logo" style="width: 10vw; height: 10vw; background-color: lightblue; border-radius: 100%; margin-left: 2.5vw; margin-block: 1vh;"></div> -->

        <!-- logo -->

        <!-- meny -->
        <div class="meny">
            <a href="/start-sida">
                <button class="button-1">Hem</button>
            </a>
            <a href="/om-oss">
                <button class="button-1">Om oss</button>
            </a>
            <% if (username) { %>
                <a href="/anvandare">
                    <button class="button-1"><%= username %></button>
                </a>
            <% } else { %>
                <a href="/login">
                    <button class="button-1">Konto</button>
                </a>
            <% } %>
             
             <!-- kundvagn icon placeholder -->
             <!-- <div class="Cart" style="background-color: aquamarine; width: 10vh; height: 10vh; margin-right: 2.5vw; border-radius: 10px; border: 0px;"></div> -->
             
             <img src="../../../images/Kundvagn.png" alt="Bild på en kundvagn" class="kundvagn" id="kundvagn_id" onclick="location.href='/leverans'">
        </div>

    </div>

    <div class="down" style="display: flex; height: 76vh;">

        <!-- Sido menyn -->
        <div class="left">

            <!-- Meny -->
            <a href="/Beskrivningar">
                <button class="button-1" style="margin-left: 1vw;"> BUTIKER: </button>
            </a>

            <!-- Sök funktion -->
            <input id="searchInput" placeholder="Sök butik/rätt" style="width: 10vw; border-radius: 10px; margin-left: 0.666vw;">

            <!-- Scroll meny -->
            <div class="shops">

                <!-- Restauranger -->
                <div class="Shop-1" style="height: 5vh; overflow-y: hidden" onmouseover="this.style.height = 'fit-content'" onmouseout="this.style.height = '5vh'">
                    <a href="/Abracadabra/abra-cadabra"><button class="button-2 res_1" style="margin-bottom: 1vh"> Abra cadabra</button></a>
                    <a href="/Abracadabra/brisket-platter"><button class="button-2" style="margin-top: 1vh;"> Brisket platter</button></a>
                    <a href="/Abracadabra/ribs"><button class="button-2" style="margin-top: 1vh;"> Ribs</button></a>
                    <a href="/Abracadabra/kyckling"><button class="button-2" style="margin-top: 1vh;"> Kyckling</button></a>
                </div>
                <div class="Shop-1" style="height: 5vh; overflow-y: hidden" onmouseover="this.style.height = 'fit-content'" onmouseout="this.style.height = '5vh'">
                    <a href="/Agatas/agatas"><button class="button-2 res_1" style="margin-bottom: 1vh"> Agatas </button></a>
                    <a href="/Agatas/avocado-toast"><button class="button-2" style="margin-top: 1vh;"> Avocado-toast</button></a>
                    <a href="/Agatas/choklad-pudding"><button class="button-2" style="margin-top: 1vh;"> Choklad pudding</button></a>
                    <a href="/Agatas/soppa"><button class="button-2" style="margin-top: 1vh;"> Räk-soppa</button></a>
                </div>
                <div class="Shop-1" style="height: 5vh; overflow-y: hidden" onmouseover="this.style.height = 'fit-content'" onmouseout="this.style.height = '5vh'">
                    <a href="/Pretantieuse/pretentieuse"><button class="button-2 res_1" style="margin-bottom: 1vh"> Prétentieuse</button></a>
                    <a href="/Pretantieuse/moln"><button class="button-2" style="margin-top: 1vh;"> Di-väte-mono-oxid blandning</button></a>
                    <a href="/Pretantieuse/centaur"><button class="button-2" style="margin-top: 1vh;"> Centaur</button></a>
                    <a href="/Pretantieuse/slag"><button class="button-2" style="margin-top: 1vh;"> Knuckle sandwich</button></a>
                </div>

            </div>

            <a href="https://www.google.se/maps/search/Restauranger" target="_blank">
                <button class="button-1" style="margin-left: 1vw;"> Karta</button>
            </a>
        </div>

        <div class="main-space" style=" width: 88vw;">

            <!-- Själva restaurangen is sig -->
            <div style="display: flex; justify-content: space-evenly;margin-bottom: 4vh;">
                <img src="../../../images/Agata.png" alt="Agatas logo" class="logo">
                <div class="box-1" style="width: 20vw; text-align: center; display: flex; align-items: center;"> <p>
                    Agatas har med kärlek serverat fräsch, hälsosam och vällagad mat sedan 2021, från sitt charmiga hörn på Lavendelvägen 8.
                </p></div>
            </div>
            
            <div class="matratter" style=" height: 50vh; display: flex;gap: 3vw; background-color: lightgray;">

                <!-- Maträtterna -->
                <div style="  justify-content: space-evenly;text-align: center;">
                    <a href="/Agatas/avocado-toast"><img src="../../../images/avacadoToast.jpg" alt="Avacado-toast" class="image-1" ></a>

                <!-- beskrivning & pris/köp -->
                 <div>

                     <div class="box-4" style="width: 20vw; ">
                        <a class="links" href="/Agatas/avocado-toast"><p>Grillat surdegsbröd med mosad avokado, chili och sesamfrön.
                            </p></a>
                    </div>

                     <button class="button-2" onclick="

                     fetch('/buy/AvacadoToast', {method: 'POST', }, )

                     kunvagn_wiggle()
                     
                     
                     " style="width: 20vw; padding-block: 0px;">
                        <p> <pre>KÖP:  50 kr</pre></p>
                     </button>
                </div>
            </div>
            <div style=" justify-content: space-evenly;text-align: center;">
                <a href="/Agatas/choklad-pudding"><img src="../../../images/chokladPudding.jpg" alt="Choklad pudding" class="image-1" style="align-items: center"></a>

                <!-- beskrivning & pris/köp -->
                 <div>

                     <div class="box-4" style="width: 20vw; ">
                         <a class="links" href="/Agatas/choklad-pudding"><p>Chokladpudding med kakao, dadlar och kokosmjölk.
                        </p></a>
                    </div>

                     <button class="button-2" onclick="

                     fetch('/buy/ChockladPudding', {method: 'POST', }, )

                     kunvagn_wiggle()
                     
                     
                     " style="width: 20vw; padding-block: 0px;">
                    <p> <pre>KÖP:  35 kr</pre></p>
                </button>
                </div>
            </div>
            <div style=" justify-content: space-evenly; text-align: center;">
                <a href="/Agatas/soppa"><img src="../../../images/räkSoppa.jpg" alt="Räk soppa" class="image-1"></a>

                <!-- beskrivning & pris/köp -->
                 <div>

                     <div class="box-4" style="width: 20vw; ">
                        <a class="links" href="/Agatas/soppa"><p> Krämig soppa med handskalade räkor, grädde, vitt vin och en touch av dill.</p></a>
                    </div>
                    
                    <button class="button-2" onclick="

                        fetch('/buy/Soppa', {method: 'POST', }, )

                        kunvagn_wiggle()
                        
                        
                        " style="width: 20vw; padding-block: 0px;">
                    <p> <pre>KÖP:  60 kr</pre></p>
                    </button>
                </div>
            </div>

        </div>

    </div>
    </div>

    <script src="/scripting.js"></script>
